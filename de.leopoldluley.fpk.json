{
    "$schema": "https://raw.githubusercontent.com/flatpak/flatpak-builder/main/data/flatpak-manifest.schema.json",
    "app-id": "de.leopoldluley.fpk",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "fpk",
    "finish-args": [],
    "build-options": {
        "env": {
            "V": "1",
            "BASH_COMPLETIONSDIR": "/app/share/bash-completion/completions",
            "MOUNT_FUSE_PATH": "../tmp/"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "build-aux/flatpak/python3-modules.json",
        {
            "name": "libfuse",
            "config-opts": [
                "UDEV_RULES_PATH=/app/etc/udev/rules.d",
                "INIT_D_PATH=/app/etc/init.d"
            ],
            "cleanup": [
                "/bin/ulockmgr_server"
            ],
            "post-install": [
                "install -m a+rx fusermount-wrapper.sh /app/bin/fusermount"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libfuse/libfuse/releases/download/fuse-2.9.9/fuse-2.9.9.tar.gz",
                    "sha256": "d0e69d5d608cc22ff4843791ad097f554dd32540ddc9bed7638cc6fea7c1b4b5"
                },
                {
                    "type": "patch",
                    "path": "build-aux/flatpak/fuse-2.9.2-namespace-conflict-fix.patch"
                },
                {
                    "type": "patch",
                    "path": "build-aux/flatpak/fuse-disable-sys-mount-under-flatpak.patch"
                },
                {
                    "type": "patch",
                    "path": "build-aux/flatpak/fuse-2.9.2-closefrom.patch"
                },
                {
                    "type": "file",
                    "path": "build-aux/flatpak/fusermount-wrapper.sh"
                }
            ]
        },
        {
            "name": "ostree",
            "config-opts": [
                "--disable-man",
                "--with-curl",
                "--without-soup",
                "--without-libsystemd"
            ],
            "cleanup": [
                "/bin",
                "/etc/grub.d",
                "/etc/ostree",
                "/share/ostree",
                "/libexec"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ostreedev/ostree.git",
                    "tag": "v2024.2"
                }
            ]
        },
        {
            "name": "flatpak",
            "config-opts": [
                "--disable-documentation",
                "--disable-seccomp",
                "--disable-sandboxed-triggers",
                "--disable-system-helper",
                "--with-curl",
                "--with-system-install-dir=/var/lib/flatpak",
                "--sysconfdir=/var/run/host/etc"
            ],
            "cleanup": [
                "/bin/flatpak-bisect",
                "/bin/flatpak-coredumpctl",
                "/etc/profile.d",
                "/lib/systemd",
                "/share/dbus-1/interfaces/org.freedesktop.*",
                "/share/dbus-1/services/org.freedesktop.*",
                "/share/flatpak/triggers",
                "/share/gdm",
                "/share/zsh"
            ],
            "post-install": [
                "cp /usr/bin/update-mime-database /app/bin",
                "cp /usr/bin/update-desktop-database /app/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/flatpak.git",
                    "tag": "1.14.5"
                }
            ]
        },
        {
            "name": "flatpak-builder",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Ddocs=disabled",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/flatpak-builder.git",
                    "tag": "1.4.1"
                }
            ]
        },
        {
            "name": "fpk",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
